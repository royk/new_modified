<%= provide(:title, "Forgot password") %>
<h1>Forgot password</h1>
<div class="row">
	<div class="span6">
		<%= form_for(:session, url: '/resetpassword') do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.submit "Reset Password", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>