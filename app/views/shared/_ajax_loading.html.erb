<% container = ".feed" if container.nil? %>
<% loadNow = false if loadNow.nil? %>
<% loadOnClick = false if loadOnClick.nil? %>
<% loadToggler = "" if loadToggler.nil? %>
<% loaderClass = container+"AjaxIcon" %>
<% loaderClass[0] = '' %>
<script>
	NM.registerFeed({
		maxPages: <%= collection.total_pages %>,
		path: '<%= loadPath %>',
		currentPage: <%= params[:page] || 1 %>,
		container: '<%= container %>',
		scrollable: true,
		loadNow: <%=loadNow%>,
		loadOnClick: <%=loadOnClick %>,
		loadToggler: '<%=loadToggler%>',
		ajaxIconSelector: '.loading-indicator.<%=loaderClass%>'
		<% if defined?(callbackName) %>
			,callbackName: '<%= callbackName %>'
		<% end %>
	});
</script>
<div class="loading-indicator <%=loaderClass%>">
	<img  src="/assets/ajax-loader.gif"/>
</div>
