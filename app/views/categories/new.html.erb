<h1>Create new category</h1>
<div class="row">
	<div class="span6 offset4 light-box">
		<%= form_for(@category) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-input" %>
			<div>
				<%= f.submit "Create category", class: "btn btn-large btn-primary" %>
			</div>
		<% end %>
	</div>
</div>