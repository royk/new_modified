<h1>Create new Video Category</h1>
<div class="row">
	<div class="span6 offset4 light-box">
		<%= form_for(@video_category) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-input" %>
			<%= f.label :description %>
			<%= f.text_field :description, class: "form-input" %>
			<%= f.label :weight %>
			<%= f.text_field :weight, class: "form-input" %>
			<p>Super Category:</p>
			<%= f.select(:video_super_category_id, options_from_collection_for_select(VideoSuperCategory.all, "id", "name", @video_category.video_super_category_id), include_blank: true) %>
			<div>
				<%= f.submit "Create category", class: "btn btn-large btn-primary" %>
			</div>
		<% end %>
	</div>
</div>