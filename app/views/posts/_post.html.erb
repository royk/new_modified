<div class="post">
	<div class="container"
		<span class="content"><%= post.content %></span>
	</div>
	<span class="timestamp">
		Posted <%= time_ago_in_words(post.created_at) %> ago
	</span>
	<% if current_user?(post.user) %>
		<%= link_to "delete", post, method: :delete, data: {confirm: "You sure?"}, title: post.content %>
	<% end %>
	
</div>