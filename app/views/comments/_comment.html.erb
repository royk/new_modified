<div class="comment">
	<%= render '/shared/feed_info', user: comment.commenter, size: "small" %>
	<%= render '/shared/item_options', item: comment, user: comment.commenter %>
	<span class="content">
		<%= comment.content %>
	</span>
	<div class="timestamp">
		<%= time_ago_in_words(comment.created_at) %> ago.
	</div>
</div>