

<!-- HEADER BAR -->
	<!-- span.header-logo: Logo container -->
	<!-- ul.user-menu: Logged in user menu -->
	<!-- ul.login-menu: no-user menu -->
<!-- SITE TOP -->
	<!-- div.site-top: Site top container -->
	<!-- ul.main-menu: Site main menu -->
<header class="navbar navbar-fixed-top">
	<!-- .headernav contains the color of the top bar -->
	<div class="navbar-inner headernav">
		<div class="container">
			<!-- Logo -->				
			<span class="header-logo">
				<a href="/#">
					<p class="brand">MODIFIED</p>
					<p class="brand brand2">IN</p>
				</a>
			</span>
			<% if signed_in? %>
				<!-- Signed in top bar option -->	
				<!-- contains: user options(profile, logout) and notifications -->

				

				<ul class="pull-right nav user-menu">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %>
						<b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to "Profile", user_path(current_user) %></li>
							<li class="divider"></li>
							<li><%= link_to "Log out", signout_path, method: "delete" %></li>
						</ul>
						
					
					</li>
				</ul>
				<% unread_messages = current_user.received_messages.where(read: false) %>
				<% if unread_messages.any? %>
					<ul class="nav header-messages pull-right">
						<li class="dropdown">
							<a href="#" class="messages-toggle dropdown-toggle" data-toggle="dropdown">
								<i class="icon-envelope icon-white"></i>
							</a>
							<ul class="dropdown-menu messages-flyout">
								<%= render partial: 'shared/personal_message_item', collection: unread_messages %>
							</ul>
						</li>
					</ul>
				<% end %>
				<% unread_notifications = current_user.notifications.where(read: false) %>
				<ul class="nav pull-right header-notifications">
					<li class="dropdown">
						<a href="#" class="notifications-toggle dropdown-toggle" data-toggle="dropdown" onclick=<%= %q{NM.clearNotifications();} if unread_notifications.any?%> >
							<img src='/assets/notifications.png' class="notifications-img"/>
							<span class="notifications-count">
								<%= unread_notifications.count if unread_notifications.any?%>
							</span>
						</a>
						<% if current_user.notifications.any? %>
							<ul class="dropdown-menu notifications-flyout">
							<% @old_notifications = false %>
							<%= render partial: 'shared/personal_notification_item', collection: current_user.notifications.find(:all, limit: 10) %>
							</ul>
						<% end %>
						</span>
					</li>
				</ul>
			<% else %>
				<!-- Signed out top bar option -->			
				<!-- contains: login and register -->
				<ul class="nav pull-right login-menu">
					<li><%= link_to "Register", signup_path %></li>
					<li class="hDivider">|</li>
					<li><%= link_to "Login", signin_path %></li>

				</ul>
			<% end %>
		</div>
	</div>
</header>
<!-- Site top area (between the top bar and the content - place for navigation and big logo) -->
<div class="container site-top">
	<!-- Site main menu -->
	<ul class="nav nav-bold main-menu">
		<li><%= link_to "Home", root_path %></li>
		<li><%= link_to "Videos", videos_path %></li>
		<li><%= link_to "Blogs", blogs_path %></li>
		<li><%= link_to "Users", users_path %></li>
	</ul>
</div>