<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
	<div class="span6 offset4">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password  %>
			<%= f.password_field  :password  %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field  :password_confirmation %>
			<div class="Container"></div> <!-- TBD: Remove this. without this container, the button mysteriously resids on the same line as password confirmation -->
			<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
