<% provide(:title, @user.shown_name) %>
<script>
	$("body").addClass("body-profile")
</script>
<div class="overlay"></div>
<div class="row-fluid profile">
	<aside class="span4 profile-left">
		<section>
			<h1>
				<%= @user.shown_name %>
			</h1>
			<div class="user-avatar">
				<%= gravatar_for @user, size: 200 %>
			</div>
		</section>
	</aside>
	<div class="span8">
		<ul class="profile-nav nav">
			<li id="about">About</li>
			<% if @videos.any? %>
				<li id="videos">Videos</li>	
			<% end %>
			<% if @posts.any? %>
				<li id="posts">Posts</li>
			<% end %>
			<% if @articles.any? %>
				<li id="articles">Articles</li>
			<% end %>
		</ul>
		<script>
			$(document).ready(function() {
				NM.registerToggleMenu([	'div#about',
										'div#videos',
										'div#posts',
										'div#articles'],
										['li#about',
										'li#videos',
										'li#posts',
										'li#articles'
										]);
				NM.selectMenuItem(0);
				// add zebra bg for every odd row
				$("tr:odd").addClass("zebra");
				// make label cells shorter.
				$("td:even").addClass("short");
			});
		</script>
		<div id="about" class="span9">
			<div class="table-box">
				<div class="table-head">
					<%= t(:personal) %>
				</div>
					<table>
						<tbody>
							<tr>
								<td>Name:</td>
								<td><%=real_name(@user)%></td>
							</tr>
							<tr>
								<td>From:</td>
								<td><%=@user.location%></td>
							</tr>
							<% if @user.age>0 %>
								<tr>
									<td>Age:</td>
									<td><%=@user.age%></td>
								</tr>
							<% end %>
							<% if @user.years_playing>0 %>
								<tr>
									<td>Years playing:</td>
									<td><%= @user.years_playing %></td>
								</tr>
							<% end %>
							<% if @user.bap %>
								<tr>
									<td>BAP name:</td>
									<td><%= @user.bap_name %></td>
								</tr>
								<tr>
									<td>Bap induction:</td>
									<td><%= @user.bap_induction.year%></td>
								</tr>
							<% end %>
							<% unless @user.motto.nil? || @user.motto.empty? %>
								<tr>
									<td>Motto:</td>
									<td> <%= @user.motto %></td>
								</tr>
							<% end %>
							<% unless @user.hobbies.nil? || @user.hobbies.empty? %>
								<tr>
									<td>Activities:</td>
									<td> <%= @user.hobbies %></td>
								</tr>
							<% end %>
						<tbody>
					</table>
				</div>
			</div>
			<% if @videos.any? %>
				<div id="videos">
					<div class="feed">
						<%= render partial: 'shared/feed_item', collection: @videos, comments_shown: false %>
					</div>
				</div>
			<% end %>
			<% if @posts.any? %>
				<div id="posts">
					<div class="feed">
						<%= render partial: 'shared/feed_item', collection: @posts, comments_shown: false %>
				</div>
			<% end %>
			<% if @articles.any? %>
				<div id="articles">
					<div class="feed">
						<%= render partial: 'shared/feed_item', collection: @articles, comments_shown: false %>
					</div>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>
