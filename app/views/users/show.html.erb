<% provide(:title, @user.shown_name) %>
<script>
	$("body").addClass("body-profile")
</script>
<div class="overlay"></div>
<div class="row-fluid profile">
	<aside class="span4 profile-left">
		<section>
			<h1>
				<%= privacy_name(@user) %>
			</h1>
			<div class="user-avatar">
				<%= gravatar_for @user, size: 200 %>
			</div>
		</section>
	</aside>
	<div class="span8">
		<ul class="profile-nav nav">
			<li>About</li>
			<li>Wall</li>
			<li>Videos</li>
			<li>Posts</li>
			<li>Articles</li>
		</ul>
		<% if @videos.any? %>
			<div class="feed">
				<%= render partial: 'shared/feed_item', collection: @videos, comments_shown: false %>
			</div>
		<% end %>
	</div>
</div>
