<% provide(:title, @user.shown_name) %>
<div class="row-fluid">
	<aside class="span4">
		<section>

			<h1>
				<%= @user.shown_name %>
			</h1>
			<div class="container span4 center">
				<%= gravatar_for @user %>
			</div>
			<% if @user.admin? %>
				<h2>
					Admin
				</h2>
			<% end %>
			<% if current_user %>
				<%= @user.name %>
				<div class="location">
					<%= @user.city %>, <%= @user.country %>
				</div>
			<% end %>
		</section>
		<ul class="user-actions-list">
			<% if @user==current_user %>
				
					<li><%= link_to "Edit details", edit_user_path(current_user) %></li>
					<li><%= link_to "My Messages", messages_path %></li>
				
			<% else %>
				<li><%= link_to "Send Message", new_message_path( recipient: @user) %>
				</li>
			<% end %>
		</ul>

	</aside>
	<div class="span8">
		<% if @user.posts.any? %>
			<h1>Posts</h1>
			<div class="feed">
				<%= render partial: 'shared/feed_item', collection: @user.posts, comments_shown: false %>
			</div>
		<% end %>
		<% if @videos.any? %>
			<h1>Videos</h1>
			<div class="feed">
				<%= render partial: 'shared/feed_item', collection: @videos, comments_shown: false %>
			</div>
		<% end %>
	</div>
</div>
